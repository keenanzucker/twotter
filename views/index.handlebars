<div class="flex-container">
	<header>
		<h1>TWOTTER</h1>
		<h2>Hello: <span id="username-heading">{{this.currentUser}}</span></h2>
		<form id="logout-form" action="/logout" method="GET">
		<button type="submit">Logout</button>
		</form>
	</header>
	
	<div id="add-twote">
		<form action="new" method=POST>
			<input type="text" name="text" placeholder="write yo twote">
			<input type="submit" value="TWOTE!">
		</form>
		<br>
		<br>
	</div>
	<div class="flex-list">
		<ul id="twote-list">
			{{#each twotes}}
				<li id={{this._id}} class={{author}}>
					<p>{{text}} -- {{author}}</p>
					<button class="remove-button">X</button>
				</li>
				
			{{/each}}

		  	<li id="hidden-template-li">
		    <p><span class="twote">This is a pretty sweet twote</span> -- <span class="author">author</span></p>
		    <button class="remove-button">X</button>
		  </li>
		</ul>
	</div>

	<aside class="flex-side">
		<ul id="user-list">
			{{#each users}}
			<li class="userName" id={{this._id}}><p>{{username}}</p></li>
			{{/each}}
			<li id="hidden-template-user">
				<p><span class="username">user numba 1</span></p>
			</li>
		</ul>
	</aside>
</div>
